{% extends 'DawDietaBundle::layout.html.twig' %}
{% block title %}Lista de recetas{% endblock %}
{% block body %}
    <header>Lista de recetas</header>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Ingredientes</th>
                <th>Preparación</th>
                <th>Calorías</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('receta_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.titulo }}</td>
                <td>{{ entity.ingredientes }}</td>
                <td>{{ entity.preparacion }}</td>
                <td>{{ entity.calorias }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('receta_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('receta_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('receta_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
