{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Articulo list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Descripcion</th>
                <th>Tipo</th>
                <th>Fuente</th>
                <th>Fechapub</th>
                <th>Img</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('articulo_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.titulo }}</td>
                <td>{{ entity.descripcion }}</td>
                <td>{{ entity.tipo }}</td>
                <td>{{ entity.fuente }}</td>
                <td>{% if entity.fechapub %}{{ entity.fechapub|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.img }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('articulo_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('articulo_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('articulo_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
